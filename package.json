{
  "name": "train-status",
  "version": "0.0.1",
  "description": "Train status",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack -p",
    "build:watch": "cross-env NODE_ENV=development webpack-dev-server --progress",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "test:unit:watch": "cross-env NODE_ENV=test jest --watch",
    "test:unit": "cross-env NODE_ENV=test jest --coverage"
  },
  "dependencies": {
    "d3": "^4.10.2",
    "moment": "^2.18.1",
    "react": "^15.6.1",
    "react-autosuggest": "^9.3.1",
    "react-datepicker": "^0.53.0",
    "react-dock": "^0.2.4",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "redux": "^3.7.1",
    "redux-saga": "^0.15.4",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "@types/d3": "^4.9.0",
    "@types/enzyme": "^2.8.7",
    "@types/googlemaps": "^3.26.15",
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/jest": "^20.0.8",
    "@types/react": "^15.6.2",
    "@types/react-autosuggest": "^8.0.2",
    "@types/react-datepicker": "^0.52.2",
    "@types/react-dom": "^15.5.1",
    "@types/react-hot-loader": "^3.0.3",
    "@types/react-redux": "^4.4.45",
    "@types/webpack": "^3.0.10",
    "@types/webpack-env": "^1.13.1",
    "awesome-typescript-loader": "^3.1.3",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.7",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.6.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "jest": "^20.0.4",
    "json-loader": "^0.5.7",
    "node-sass": "^4.5.3",
    "react-addons-test-utils": "^15.6.0",
    "react-hot-loader": "next",
    "react-test-renderer": "^15.6.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-jest": "^20.0.14",
    "ts-lint": "^4.5.1",
    "ts-node": "^3.2.0",
    "typescript": "^2.5.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.8.2",
    "webpack-notifier": "^1.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/*.spec.(ts|tsx|js)"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|pdf|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      ".*\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFiles": [
      "./jestSetup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "mapCoverage": true
  }
}
